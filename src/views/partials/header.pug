header
    left
        a(href="/").left-menubar__bar
            i.fa.fa-bars
        a(href="/").header__logo DAMETIME
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/users/edit") Edit Profile
                li
                    a(href="/users/logout") Log Out
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.socialOnly
                            img(crossorigin, src=loggedInUser.avatarUrl).header__avatar
                        else
                            img(crossorigin, src=loggedInUser.avatarUrl).header__avatar
            else
                li
                    a(href="/login") Login               
                li
                    a(href="/join").header__btn Join