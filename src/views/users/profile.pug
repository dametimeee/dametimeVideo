extends ../base
include ../mixins/video

block content
    div.profile__data
        if user.socialOnly
            img(crossorigin, src=user.avatarUrl).avatar
        else
            img(crossorigin, src="https://ssl.pstatic.net/static/pwe/address/img_profile.png").avatar
        h3=user.name
    div.video-grid  
        each video in user.videos
            +video(video)
        else 
            span.empty__message No videos found