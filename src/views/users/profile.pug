extends ../base
include ../mixins/video

block content
    div.profile__data
        if !user.socialOnly
            img(crossorigin="anonymous",src="https://ssl.pstatic.net/static/pwe/address/img_profile.png").avatar
        else
            img(crossorigin="anonymous", src=(user.avatarUrl)).avatar
        h3=user.name
    div.video-grid  
        each video in user.videos
            +video(video)
        else 
            span.empty__message No videos found